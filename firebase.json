{
    "hosting": {
        "public": "resources/public",
        "predeploy": "npm run release",
        "ignore": [
            "firebase.json",
            "/**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
            "source": "**",
            "destination": "index.html"
        }
        ]
    },
    "emulators": {
        "auth": {
            "port": 9098
        },
        "functions": {
            "port": 5003
        },
        "firestore": {
            "port": 8088
        },
        "hosting": {
            "port": 4993
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions"
    }
}
