{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "serve": "firebase emulators:start --only functions",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "release": "npx shadow-cljs compile func func-test",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
		    "ci": "bb --config ../bb.edn export-vars cloud_emulators/firebase.json && source .env.firebase && firebase emulators:exec --project my-haggadah --config cloud_emulators/firebase.json 'npm run release'",
        "watch": "npx shadow-cljs watch func func-test"
    },
    "engines": {
        "node": "18"
    },
    "main": "index.js",
    "dependencies": {
        "firebase-admin": "^11.5.0",
        "firebase-functions": "^4.4.1",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0",
        "shadow-cljs": "^2.23.3",
        "source-map-support": "^0.5.21"
    },
    "private": true
}
