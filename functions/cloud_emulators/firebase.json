{
  "hosting": {
    "public": "../resources/public",
    "predeploy": "npm run release",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "../resources/public/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9097
    },
    "functions": {
      "port": 5004
    },
    "firestore": {
      "port": 8087
    },
    "hosting": {
      "port": 4992
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "../."
  }
}
