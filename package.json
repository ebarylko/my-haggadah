{
	"name": "haggadah",
	"scripts": {
		"tailwind": "npx tailwindcss -i ./src/haggadah/css/styles.css -o ./resources/public/css/styles.css ",
		"tailwind:watch": "npm run tailwind -- --watch",
		"ancient": "clojure -Sdeps '{:deps {com.github.liquidz/antq {:mvn/version \"RELEASE\"}}}' -m antq.core",
		"watch": "npx shadow-cljs watch app ci func",
		"release": "npx shadow-cljs release app",
		"build-report": "npx shadow-cljs run shadow.cljs.build-report app target/build-report.html",
		"test": "npx shadow-cljs compile ci && npx karma start --single-run",
		"test:integration": "firebase emulators:exec 'bb test:bb'",
		"test:acceptance": "firebase emulators:exec --project my-haggadah 'lein test'",
		"test:acceptance2": "firebase emulators:exec --token FIREBASE_TOKEN --project my-haggadah 'lein test'"
	},
	"dependencies": {
		"cheshire": "^0.1.42",
		"firebase": "^9.21.0",
		"firebase-admin": "^11.8.0",
		"highlight.js": "11.5.1",
		"markdown-clj": "^1.10.3",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"karma": "^6.4.2",
		"karma-chrome-launcher": "^3.2.0",
		"karma-cljs-test": "^0.1.0",
		"postcss": "^8.4.23",
		"postcss-import": "^15.1.0",
		"shadow-cljs": "2.20.5",
		"socket.io-parser": "^4.2.3",
		"tailwindcss": "^3.3.2",
		"ws": "^8.13.0"
	}
}
