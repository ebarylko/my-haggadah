{
  "hosting": {
    "public": "../../resources/public",
    "predeploy": "npm run release",
    "ignore": [
      "firebase.json",
      "../../**/.*",
      "../../**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "../../**",
        "destination": "../..//index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9098
    },
    "functions": {
      "port": 5004
    },
    "firestore": {
      "port": 8081
    },
    "hosting": {
      "port": 5003
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "../../firestore.indexes.json"
  },
  "functions": {
    "source": "../../functions"
  }
}
